<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.jerryvu.jerrysproject.MainActivity">

    <TextView
        android:id="@+id/Animation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jerry's Mobile iPhone Sale"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <GridLayout
        android:orientation="horizontal"
        android:id="@+id/animation_bottom"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/Listview_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnListview"
            android:text="iPhone List"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Checkbox_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnCheckbox"
            android:text="Choose iPhone(s)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/SQlite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSQlite"
            android:text="Reserve iPhone"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/SQliteRead_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSQliteRead"
            android:text="Status"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/Viewpager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnViewpager"
            android:text="Infopager"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickExit"
            android:text="ExitDialog"
            android:textAllCaps="false" />

    </GridLayout>

    <ImageView
        android:layout_below="@+id/Animation_tv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/iphone"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gesturearrow"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Swipe right to left to iPhone List"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Swipe left to right to Infopager"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/animation_bottom"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Or select an option below"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:layout_above="@+id/animation_bottom"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:id="@+id/textView3" />

</RelativeLayout>
